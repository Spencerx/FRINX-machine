{
  "version": 2,
  "name": "krakend for FM",
  "port": 8080,
  "cache_ttl": "3600s",
  "tls": {{ include "tls/tls.json" }},
  "timeout": "2m",
  "plugin": {
    "pattern": ".so",
    "folder": "/usr/local/lib/krakend/"
  },
  "extra_config": {
    "github_com/devopsfaith/krakend-cors": {
      "allow_origins": [
        "*"
      ],
      "allow_methods": [
        "GET",
        "HEAD",
        "POST",
        "PUT"
      ],
      "expose_headers": [
        "X-Requested-With",
        "Access-Control-Allow-Headers",
        "Access-Control-Allow-Origin",
        "Access-Control-Allow-Methods",
        "set-cookie",
        "cookie",
        "KEYCLOAK_IDENTITY"
      ],
      "max_age": "12h",
      "allow_headers": [
        "*",
        "Cookie"
      ],
      "allow_credentials": true,
      "debug": true
    },
    "github_com/devopsfaith/krakend-gologging": {
      "level": "WARNING",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    }
  },
  "endpoints": [
    {{ template "frinx_auth.tmpl" .frinx_auth}},
    {{ template "workflow_proxy.tmpl" .workflow_proxy_settings.endpoints }},
    {{ template "workflow_proxy.tmpl" .workflow_proxy_settings_deprecated.endpoints }},
    {{ template "uniconfig.tmpl" .uniconfig_settings }},
    {{ template "uniconfig_deprecated.tmpl" .uniconfig_settings }},
    {{ template "uniresource.tmpl" .uniresource_settings.endpoints }},
    {{ template "frinx_frontend.tmpl" .frinx_frontend_settings}}
  ]
}
