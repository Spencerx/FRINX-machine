{
  "version": 2,
  "name": "krakend for FM",
  "port": 8080,
  "cache_ttl": "3600s",
  "tls": {{ include "tls/tls.json" }},
  "timeout": "2m",
  "plugin": {
    "pattern": ".so",
    "folder": "/usr/local/lib/krakend/"
  },
  "extra_config": {
    "github_com/devopsfaith/krakend-cors": {
      "allow_origins": [
        "*"
      ],
      "allow_methods": [
        "GET",
        "HEAD",
        "POST"
      ],
      "allow_credentials": true
    },
    "github_com/devopsfaith/krakend-gologging": {
      "level": "WARNING",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "github_com/devopsfaith/krakend-oauth2-clientcredentials": {
      "endpoint_params": {},
      "client_id": "krakend-api-gateway",
      "client_secret": "fafa48e1-1492-4bf8-abe9-5dc8240cb276",
      "token_url": "http://localhost:8403/auth/realms/master/protocol/openid-connect/token",
      "scopes": "openid"
    }
  },
  "endpoints": [
    {{ template "frinx_auth.tmpl" }},
    {{ template "workflow_proxy.tmpl" .workflow_proxy_settings.endpoints }},
    {{ template "workflow_proxy.tmpl" .workflow_proxy_settings_deprecated.endpoints }},
    {{ template "uniconfig.tmpl" .uniconfig_settings }},
    {{ template "uniconfig_deprecated.tmpl" .uniconfig_settings }},
    {{ template "uniresource.tmpl" .uniresource_settings.endpoints }},
    {{ template "frinx_frontend.tmpl" .frinx_frontend_settings}}
  ]
}
